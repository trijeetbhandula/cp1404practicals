BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: ''
            font_size: 48
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                font_size: 48
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                font_size: 48
                on_press: app.handle_increment(-1)
#    Button:
#        text: 'Convert m to km'
#        font_size: 48
#        on_press: app.handle_calculate()
    Label:
        id: output_label
        font_size: 48
        text: app.message
        color: (1, 1, 0, 1)